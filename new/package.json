{
  "name": "phrased-website",
  "version": "1.0.0",
  "description": "https://phrased.org/",
  "main": "index.js",
  "scripts": {
    "watch-css": "postcss src/app.css -w --poll -m -o bundle.css",
    "watch-js": "watchify src/app.js -o bundle.js -t babelify -v --ignore vertx",
    "watch": "npm run watch-js & npm run watch-css & npm run serve",
    "serve": "browser-sync start --server --no-ui --no-open --no-notify --no-inject-changes --index index.html -f bundle.js bundle.css index.html",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phrase-yourself/phrased-website.git"
  },
  "author": "Jakob Holderbaum",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phrase-yourself/phrased-website/issues"
  },
  "homepage": "https://github.com/phrase-yourself/phrased-website#readme",
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^1.0.20",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browser-sync": "^2.18.13",
    "browserify": "^14.5.0",
    "postcss": "^6.0.14",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "phrased": "^1.1.0"
  }
}
